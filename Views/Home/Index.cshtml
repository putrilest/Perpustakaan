@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-4">
    <div class="text-center mb-4">
        <h1 class="display-4">📚 Welcome To Mini Perpustakaan</h1>
        <p class="lead">Kelola data Buku, Anggota, dan Peminjaman dengan mudah</p>
    </div>

    <div class="row">
        <!-- Card Jumlah Buku -->
        <div class="col-md-4">
            <div class="card shadow border-0 rounded-3 text-center border-primary shadow-sm hover-card hover-blue">
                <div class="card-body">
                    <h5 class="card-title text-dark">Jumlah Buku</h5>
                    <p class="display-6 fw-bold text-blue">@ViewBag.TotalBuku</p>
                </div>
            </div>
        </div>

        
        <!-- Card Jumlah Anggota -->
        <div class="col-md-4">
            <div class="card shadow border-0 rounded-3 text-center shadow-sm hover-card hover-green">
                <div class="card-body">
                    <h5 class="card-title text-dark">Jumlah Anggota</h5>
                    <p class="display-6 fw-bold">@ViewBag.TotalAnggota</p>
                </div>
            </div>
        </div>

        <!-- Card Jumlah Buku Dipinjam -->
        <div class="col-md-4">
            <div class="card shadow border-0 rounded-3 text-center shadow-sm hover-card hover-yellow">
                <div class="card-body">
                    <h5 class="card-title text-dark">Buku Dipinjam</h5>
                    <p class="display-6 fw-bold">@ViewBag.TotalPeminjaman</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-card {
        transition: all 0.3s ease-in-out;
        cursor: pointer;
    }

    .hover-blue {
        color: #0d6efd;
    }

    .hover-green {
        color: #198754;
    }

    .hover-yellow {
        color: #ffc107;
    }


    /* Hover efek sesuai warna */
    .hover-blue:hover {
        background-color: #0d6efd; /* biru bootstrap */
        color: white !important;
    }
    .hover-green:hover {
        background-color: #198754; /* hijau bootstrap */
        color: white !important;
    }
    .hover-yellow:hover {
        background-color: #ffc107; /* kuning bootstrap */
        color: white !important;
    }

    /* Supaya teks di dalam ikut berubah putih saat hover */
    .hover-card:hover .card-title,
    .hover-card:hover .card-text {
        color: white !important;
    }
</style>