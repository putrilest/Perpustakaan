@model PerpustakaanMVC.Models.Peminjaman

@{
    ViewData["Title"] = "Edit Peminjaman";
}

<h2>Edit Peminjaman</h2>

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="BukuId" class="control-label"></label>
        <select asp-for="BukuId" class="form-control" asp-items="ViewBag.BukuId"></select>
    </div>
    <div class="form-group">
        <label asp-for="AnggotaId" class="control-label"></label>
        <select asp-for="AnggotaId" class="form-control" asp-items="ViewBag.AnggotaId"></select>
    </div>
    <div class="form-group">
        <label asp-for="TanggalPinjam" class="control-label"></label>
        <input asp-for="TanggalPinjam" class="form-control" type="date"/>
        <span asp-validation-for="TanggalPinjam" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TanggalKembali" class="control-label"></label>
        <input asp-for="TanggalKembali" class="form-control" type="date"/>
        <span asp-validation-for="TanggalKembali" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="Id" />
    <div class="form-group mt-2">
        <input type="submit" value="Simpan" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Kembali</a>
    </div>
</form>