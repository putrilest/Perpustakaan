@model  IEnumerable<PerpustakaanMVC.Models.Anggota>

@{
    ViewData["Title"] = "Daftar Anggota";
}

<h2>Daftar Anggota</h2>

<div class="d-flex justify-content-between align-items-center mb-3">
    <a asp-action="Create" class="btn btn-primary">Tambah Anggota</a>
    <form asp-action="Index" method="get" class="d-flex">
        <input type="text" name="searchString" class="form-control me-2"
               placeholder="Cari Nama, Alamat, Telp..."
               value="@Context.Request.Query["searchString"]" />
        <button type="submit" class="btn btn-outline-secondary">Cari</button>
    </form>
</div>


<table class="table table-striped">
    <thead>
        <tr>
            <th>Nama</th>
            <th>Alamat</th>
            <th>Telepon</th>
            <th>Aksi</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var anggota in Model)
        {
            <tr>
                <td>@anggota.Nama</td>
                <td>@anggota.Alamat</td>
                <td>@anggota.Telepon</td>
                <td>
                    <a asp-action="Details" asp-route-id="@anggota.Id" class="btn btn-info btn-sm">Detail</a>
                    <a asp-action="Edit" asp-route-id="@anggota.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@anggota.Id" class="btn btn-danger btn-sm">Hapus</a>
                </td>
            </tr>
        }
    </tbody>
</table>